- if Rails.env.production?
  script[async src="https://www.googletagmanager.com/gtag/js?id=UA-118668409-1"]
  javascript:
      window.dataLayer = window.dataLayer || [];
      function gtag() {
          dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-118668409-1');
- else
  javascript:
    function gtag() {}

- if flash[:analytics_event]
  javascript:
      gtag('event', "#{flash[:analytics_event]}");