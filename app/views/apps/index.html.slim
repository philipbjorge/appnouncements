.container
  - if @apps.length == 0
    = render partial: "empty_apps"
  - else
    .row
      .col-sm-6
        h3 Your Apps
      .col-sm-6
        = link_to new_app_path, class: "btn btn-primary float-right mr-3"
          = octicon "plus", class: "mr-2", "aria-label": "new app"
          | New App
    hr
    .row.mt-4
      = render @apps